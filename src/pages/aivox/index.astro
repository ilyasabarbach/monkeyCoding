---
import MainLayout from '../../layouts/MainLayout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import { Shield, Smartphone, Zap, CheckCircle, Download } from 'lucide-astro';
import { Image } from 'astro:assets';

// Import local images
import heroImage from '../../assets/images/aivox-hero.png';
import screenshot1 from '../../assets/images/screenshot1.png';
import screenshot2 from '../../assets/images/screenshot2.png';
import screenshot3 from '../../assets/images/screenshot3.png';
import screenshot4 from '../../assets/images/screenshot4.png';
import screenshot5 from '../../assets/images/screenshot5.png';
import screenshot6 from '../../assets/images/screenshot6.png';
import screenshot7 from '../../assets/images/screenshot7.png';

const screenshots = [
  { src: screenshot1, alt: "Aivox App Screenshot 1" },
  { src: screenshot2, alt: "Aivox App Screenshot 2" },
  { src: screenshot3, alt: "Aivox App Screenshot 3" },
  { src: screenshot4, alt: "Aivox App Screenshot 4" },
  { src: screenshot5, alt: "Aivox App Screenshot 5" },
  { src: screenshot6, alt: "Aivox App Screenshot 6" },
  { src: screenshot7, alt: "Aivox App Screenshot 7" },
];
---

<MainLayout title="Aivox - AI Call Recorder">
  <Navbar />
  
  <main class="flex-grow">
     <!-- Hero Section -->
     <div class="relative bg-charcoal text-white overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-br from-crimson/20 to-transparent z-0"></div>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 sm:py-32 relative z-10">
           <div class="lg:grid lg:grid-cols-12 lg:gap-8 items-center">
              <div class="sm:text-center md:max-w-2xl md:mx-auto lg:col-span-6 lg:text-left">
                 <h1 class="text-4xl tracking-tight font-extrabold text-white sm:text-5xl md:text-6xl lg:text-5xl xl:text-6xl">
                    <span class="block">Aivox: The Private</span>
                    <span class="block text-crimson">AI Call Recorder</span>
                 </h1>
                 <p class="mt-3 text-base text-gray-300 sm:mt-5 sm:text-l md:mt-5 md:text-xl lg:mx-0">
                    Record calls securely on Android. 100% Offline, Ad-Free, and powered by on-device AI for crystal clear audio synchronization.
                 </p>
                 <div class="mt-8 sm:max-w-lg sm:mx-auto sm:text-center lg:text-left lg:mx-0">
                    <a href="https://play.google.com/store/apps/details?id=com.monkeycoding.aivox.ai.auto.callrecorder" class="inline-block transition-transform transform hover:scale-105">
                       <img src="/images/google-play-badge.png" alt="Get it on Google Play" class="h-16 w-auto" />
                    </a>
                    <p class="mt-3 text-xs text-gray-400">Requires Android 10+. No subscription required.</p>
                 </div>
              </div>
              <div class="mt-12 relative sm:max-w-lg sm:mx-auto lg:mt-0 lg:max-w-none lg:mx-0 lg:col-span-6 lg:flex lg:items-center">
                 <div class="relative mx-auto w-full rounded-lg shadow-lg lg:max-w-md">
                    <div class="relative block w-full rounded-3xl overflow-hidden shadow-2xl border-4 border-gray-700">
                       <Image src={heroImage} alt="Aivox App Interface" class="w-full h-auto object-cover" />
                    </div>
                 </div>
              </div>
           </div>
        </div>
     </div>

     <!-- Features Grid -->
     <div class="py-24 bg-white dark:bg-charcoal">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
           <div class="text-center mb-16">
              <h2 class="text-base font-semibold text-crimson tracking-wide uppercase">Why Aivox?</h2>
              <p class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
                 Built for Privacy & Performance
              </p>
           </div>

           <div class="grid grid-cols-1 gap-12 sm:grid-cols-2 lg:grid-cols-3">
              <!-- Feature 1 -->
              <div class="flex flex-col items-center text-center p-6 bg-gray-50 dark:bg-charcoal/50 rounded-2xl border border-gray-100 dark:border-gray-800">
                 <div class="flex items-center justify-center h-16 w-16 rounded-full bg-crimson/10 text-crimson mb-6">
                    <Shield class="w-8 h-8" />
                 </div>
                 <h3 class="text-lg leading-6 font-bold text-gray-900 dark:text-white">100% Offline</h3>
                 <p class="mt-2 text-base text-gray-500 dark:text-gray-400">
                    Zero data leaves your device. All recordings and metadata are stored locally in your secure app sandbox.
                 </p>
              </div>

              <!-- Feature 2 -->
              <div class="flex flex-col items-center text-center p-6 bg-gray-50 dark:bg-charcoal/50 rounded-2xl border border-gray-100 dark:border-gray-800">
                 <div class="flex items-center justify-center h-16 w-16 rounded-full bg-crimson/10 text-crimson mb-6">
                    <Zap class="w-8 h-8" />
                 </div>
                 <h3 class="text-lg leading-6 font-bold text-gray-900 dark:text-white">AI Smart Sync</h3>
                 <p class="mt-2 text-base text-gray-500 dark:text-gray-400">
                    Advanced on-device processing ensures your recordings are perfectly synced and crystal clear, every time.
                 </p>
              </div>

              <!-- Feature 3 -->
              <div class="flex flex-col items-center text-center p-6 bg-gray-50 dark:bg-charcoal/50 rounded-2xl border border-gray-100 dark:border-gray-800">
                 <div class="flex items-center justify-center h-16 w-16 rounded-full bg-crimson/10 text-crimson mb-6">
                    <CheckCircle class="w-8 h-8" />
                 </div>
                 <h3 class="text-lg leading-6 font-bold text-gray-900 dark:text-white">Ad-Free Experience</h3>
                 <p class="mt-2 text-base text-gray-500 dark:text-gray-400">
                    No banners, no pop-ups, no tracking. Just a clean, professional tool that respects your attention.
                 </p>
              </div>
           </div>
        </div>
     </div>
     
     <!-- Horizontal Screenshot Gallery -->
     <div class="py-24 bg-gray-50 dark:bg-charcoal/30 overflow-hidden">
        <div class="max-w-full mx-auto">
             <div class="text-center mb-12 px-4">
                 <h2 class="text-3xl font-extrabold text-gray-900 dark:text-white sm:text-4xl">
                     See Aivox in <span class="text-crimson">Action</span>
                 </h2>
             </div>
             
             <!-- Scroll Container -->
             <div class="flex overflow-x-auto space-x-6 pb-8 px-4 snap-x">
                {screenshots.map((screenshot) => (
                   <div class="flex-none w-72 snap-center rounded-3xl shadow-2xl border-4 border-gray-200 dark:border-gray-700 overflow-hidden">
                      <Image src={screenshot.src} alt={screenshot.alt} class="w-full h-auto" />
                   </div>
                ))}
             </div>
             
             <div class="text-center mt-4">
                <p class="text-sm text-gray-500 dark:text-gray-400">Swipe to explore &rarr;</p>
             </div>
        </div>
     </div>

     <!-- Privacy CTA -->
     <div class="bg-white dark:bg-charcoal py-16 border-t border-gray-100 dark:border-gray-800">
        <div class="max-w-4xl mx-auto px-4 text-center">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Transparent & Safe</h2>
            <p class="text-gray-600 dark:text-gray-400 mb-8">
               We believe you shouldn't have to sacrifice privacy for utility. Read exactly how we handle (or rather, don't handle) your data.
            </p>
            <a href="/aivox/privacy" class="text-crimson font-bold hover:underline inline-flex items-center">
               Read our Privacy Policy <Shield class="ml-2 w-4 h-4" />
            </a>
        </div>
     </div>
  </main>
  
  <Footer />
</MainLayout>
