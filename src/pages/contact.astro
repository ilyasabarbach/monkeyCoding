---
import MainLayout from '../layouts/MainLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { Mail, MessageSquare, MapPin } from 'lucide-astro';
---

<MainLayout title="Contact Support">
  <Navbar />
  
  <main class="flex-grow py-20 bg-gray-50 dark:bg-charcoal/20">
     <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
           <h1 class="text-4xl font-extrabold text-gray-900 dark:text-white mb-4">Contact Support</h1>
           <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
              Have a question about Aivox or our other apps? We're here to help.
           </p>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 max-w-5xl mx-auto">
           <!-- Contact Info -->
           <div class="bg-white dark:bg-charcoal p-8 rounded-3xl shadow-sm border border-gray-100 dark:border-gray-800">
              <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">Get in Touch</h2>
              
              <div class="space-y-8">
                 <div class="flex items-start">
                    <div class="flex-shrink-0">
                       <div class="w-12 h-12 bg-crimson/10 rounded-xl flex items-center justify-center text-crimson">
                          <Mail class="w-6 h-6" />
                       </div>
                    </div>
                    <div class="ml-6">
                       <h3 class="text-lg font-medium text-gray-900 dark:text-white">Email Us</h3>
                       <p class="mt-1 text-gray-500 dark:text-gray-400">
                          For general inquiries and support.
                       </p>
                       <a href="mailto:support@monkeycoding.com" class="mt-2 block text-crimson font-medium hover:underline">
                          support@monkeycoding.com
                       </a>
                    </div>
                 </div>

                 <div class="flex items-start">
                    <div class="flex-shrink-0">
                       <div class="w-12 h-12 bg-crimson/10 rounded-xl flex items-center justify-center text-crimson">
                          <MessageSquare class="w-6 h-6" />
                       </div>
                    </div>
                    <div class="ml-6">
                       <h3 class="text-lg font-medium text-gray-900 dark:text-white">Community</h3>
                       <p class="mt-1 text-gray-500 dark:text-gray-400">
                          Join our Discord community for real-time help.
                       </p>
                       <a href="#" class="mt-2 block text-crimson font-medium hover:underline">
                          Join Discord
                       </a>
                    </div>
                 </div>
                 
                 <div class="flex items-start">
                    <div class="flex-shrink-0">
                       <div class="w-12 h-12 bg-crimson/10 rounded-xl flex items-center justify-center text-crimson">
                          <MapPin class="w-6 h-6" />
                       </div>
                    </div>
                    <div class="ml-6">
                       <h3 class="text-lg font-medium text-gray-900 dark:text-white">Location</h3>
                       <p class="mt-1 text-gray-500 dark:text-gray-400">
                          MonkeyCoding HQ<br/>
                          San Francisco, CA
                       </p>
                    </div>
                 </div>
              </div>
           </div>
           
           <!-- Simple Form -->
           <div class="bg-white dark:bg-charcoal p-8 rounded-3xl shadow-sm border border-gray-100 dark:border-gray-800">
              <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">Send a Message</h2>
              <form class="space-y-6">
                 <div>
                    <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Name</label>
                    <input type="text" name="name" id="name" class="mt-1 block w-full rounded-xl border-gray-300 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 shadow-sm focus:border-crimson focus:ring-crimson sm:text-sm py-3 px-4" placeholder="Your name">
                 </div>
                 
                 <div>
                    <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
                    <input type="email" name="email" id="email" class="mt-1 block w-full rounded-xl border-gray-300 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 shadow-sm focus:border-crimson focus:ring-crimson sm:text-sm py-3 px-4" placeholder="you@example.com">
                 </div>
                 
                 <div>
                    <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Message</label>
                    <textarea id="message" name="message" rows="4" class="mt-1 block w-full rounded-xl border-gray-300 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 shadow-sm focus:border-crimson focus:ring-crimson sm:text-sm py-3 px-4" placeholder="How can we help?"></textarea>
                 </div>
                 
                 <button type="button" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-xl shadow-sm text-sm font-bold text-white bg-crimson hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-crimson transition-colors">
                    Send Message
                 </button>
              </form>
           </div>
        </div>
     </div>
  </main>
  
  <Footer />
</MainLayout>
