---
import { ArrowRight, Star } from 'lucide-astro';

interface Props {
  title: string;
  description: string;
  icon?: string;
  href: string;
  imgSrc?: string;
}

const { title, description, href, imgSrc } = Astro.props;
---

<a href={href} class="group block relative overflow-hidden rounded-2xl bg-white dark:bg-charcoal/50 border border-gray-100 dark:border-gray-800 shadow-sm hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
  <div class="absolute inset-0 bg-gradient-to-r from-crimson/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
  
  <div class="p-6">
    <div class="flex items-start justify-between">
      <div class="flex-1">
         <div class="h-12 w-12 rounded-xl bg-crimson/10 flex items-center justify-center mb-4 text-crimson group-hover:bg-crimson group-hover:text-white transition-colors duration-300">
           {imgSrc ? <img src={imgSrc} alt={title} class="w-8 h-8 object-contain" /> : <Star class="w-6 h-6" />}
         </div>
         <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2 group-hover:text-crimson transition-colors">
            {title}
         </h3>
         <p class="text-gray-600 dark:text-gray-400 leading-relaxed mb-4">
            {description}
         </p>
      </div>
    </div>
    
    <div class="flex items-center text-sm font-medium text-crimson group-hover:translate-x-1 transition-transform duration-300">
       Learn more <ArrowRight class="ml-1 w-4 h-4" />
    </div>
  </div>
</a>
